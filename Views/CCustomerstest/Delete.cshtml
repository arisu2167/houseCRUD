@model houseCRUD.tCustomer

@{
    ViewBag.Title = "Delete";
}


<h3>確定要刪除嗎?</h3>
<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            姓名
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fCustomerName)
        </dd>

        <dt>
            生日
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fCustomerBirth)
        </dd>

        <dt>
            性別
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fCustomerGender)
        </dd>

        <dt>
            電子信箱
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fCustomerEmail)
        </dd>

        <dt>
            地址
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fCustomerAddress)
        </dd>

        <dt>
            電話
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fCustomerPhone)
        </dd>

    </dl>

